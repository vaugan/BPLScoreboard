<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="match_parent"
	android:layout_height="match_parent">
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge" android:id="@+id/textView1" android:text="Player 1"></TextView>

    <Spinner
        android:id="@+id/spinnerPlayer1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge" android:id="@+id/set2P1ResultString" android:text="Player 2"></TextView>

    <Spinner
        android:id="@+id/spinnerPlayer2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout android:id="@+id/Set1" android:layout_width="match_parent" android:layout_height="wrap_content">
        <Button android:id="@+id/btnStartMatch" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Start Match!"></Button>
        <Button android:id="@+id/btnCancel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Cancel"></Button>
    </LinearLayout>	

</LinearLayout>