<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="8px">

	<TextView
		android:id="@+id/dateTime"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content" android:text="dd/m/yyyy"/>
	    
	<TextView
	    android:id="@+id/p1"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/dateTime"
	    android:text="Player1"
	    android:textAppearance="?android:attr/textAppearanceLarge" />

	<TextView
	    android:id="@+id/p2"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/p1"
	    android:text="Player2"
	    android:textAppearance="?android:attr/textAppearanceLarge" />

	<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentTop="false" android:layout_alignParentRight="true" android:text="Venue" android:id="@+id/rowvenue"></TextView>

</RelativeLayout>