<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="match_parent"
	android:layout_height="match_parent">
	
	<Button android:id="@+id/match" 
	  android:text="@string/newmatch"
		android:layout_height="wrap_content" android:layout_width="match_parent"/>

	<Button android:id="@+id/stats" 
	  android:text="@string/viewstats"
		android:layout_height="wrap_content" android:layout_width="match_parent"/>
			
	<Button android:id="@+id/players" 
	  android:text="@string/viewplayers"
		android:layout_height="wrap_content" android:layout_width="match_parent"/>
	<Spinner android:id="@+id/spinner1" android:layout_width="match_parent" android:layout_height="wrap_content"></Spinner>		
</LinearLayout>